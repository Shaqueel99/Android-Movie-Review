<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:gravity="top">

    <TextView
            android:text="Enter review for the movie: Venom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/textView2"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ratingBar"
    />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Share your view on the show"
            android:text=""
            android:maxLines="5"
            android:lines="5"

            android:id="@+id/editText3" android:inputType="textMultiLine"
            android:selectAllOnFocus="false" android:singleLine="false"/>


</LinearLayout>