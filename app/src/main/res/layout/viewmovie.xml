
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <ImageView


            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          android:src ="@drawable/Camera"
            android:id="@+id/img"/>

    <TextView
            android:text="Title:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:id="@+id/textView2"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Enter the title of movie"
            android:text="Venom"
            android:id="@+id/editText2"/>


    <TextView
            android:text="Overview:"
            android:textSize="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"



            android:id="@+id/textView3"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="18dp"
            android:hint="Enter a short description of the movie"
            android:text="When Eddie Brock acquires the powers of a symbiote, he will have to release his alter-ego 'Venom' to save his life"

            android:id="@+id/editText3"/>
    <TextView
            android:text="Language:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:id="@+id/textView4"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textSize="18dp"
            android:text="English"
            android:id="@+id/editText4"/>

    <TextView
            android:text="Release Date:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:id="@+id/textView5"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textSize="18dp"
            android:text="03-10-2018"
            android:id="@+id/editText5"/>
    <TextView
            android:text="Suitable for children below 13:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:id="@+id/textView6"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textSize="18dp"
            android:text="Yes"
            android:id="@+id/editText6"/>

</LinearLayout>